---
import i18next from 'i18next'
import { HeadHrefLangs } from 'astro-i18next/components'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import Navbar from '../components/Navbar.astro'
import '@fontsource-variable/onest'
---

<!DOCTYPE html>
<html lang={i18next.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/svg/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Jhorman Tito - Web Developer</title>
    <link rel="icon" href="/svg/favicon.svg" />
    <link rel="canonical" href="https://jhormanrus.vercel.app/" />
    <meta name="title" content="Jhorman Ruswel Tito Tito" />
    <meta name="description" content="Web Developer. Passionate about software development and I like to learn new things, solve problems and team work." />
    <meta name="author" content="Jhorman Ruswel Tito Tito" />
    <meta name="robots" content="index,follow" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Jhorman Ruswel Tito Tito" />
    <meta property="og:site_name" content="Jhorman Ruswel Tito Tito" />
    <meta property="og:description" content="Web Developer. Passionate about software development." />
    <meta property="og:url" content="https://jhormanrus.vercel.app/" />
    <meta property="og:image" content="https://res.cloudinary.com/jhormanrus/image/upload/v1652742388/banner-dark.jpg" />
    <meta property="og:image:alt" content="photo of the author" />
    <meta property="og:locale" content="en" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://jhormanrus.vercel.app/" />
    <meta name="twitter:title" content="Jhorman Ruswel Tito Tito" />
    <meta name="twitter:description" content="Web Developer. Passionate about software development." />
    <meta name="twitter:image" content="https://res.cloudinary.com/jhormanrus/image/upload/v1652742388/banner-dark.jpg" />
    <meta name="google-site-verification" content="qUjvbSPzhUnPdufHo-s4CYvp8GXwgVtTbpjJrGWLUjc" />
    <HeadHrefLangs />
    <link rel="stylesheet" href="/styles/theme-toggler.css" />
    <script>
      import { initRuntime } from '@master/css'
      import config from '../../master.css'

      initRuntime(config)
    </script>
  </head>
  <body class="flex rel ai:center bg:zinc@dark f:white@dark flex:col min-h:100vh">
    <div class="bg-gradient fixed inset:0"></div>
    <Header />
    <Navbar />
    <main class="flex flex-grow:1 flex:col gap:40 max-w:screen-sm p:20 p:24@xs p:32@md py:24">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
@import '@master/normal.css';

:root {
  --nav-offset-top: 387px;
}
html {
  font-family: 'Onest Variable', sans-serif;
  scroll-behavior: smooth;
  scroll-padding-top: 120px;
}
html.dark {
  color-scheme: dark;
}
.bg-gradient {
  z-index: -1;
  background-image: radial-gradient(at 44% 0%,rgba(255,184,122,.05) 0px,transparent 50%),radial-gradient(at 80% 0%,rgba(31,221,255,.1) 0px,transparent 50%),radial-gradient(at 80% 50%,rgba(255,133,173,.05) 0px,transparent 50%),radial-gradient(at 0% 100%,rgba(255,181,138,0.05) 0px,transparent 50%),radial-gradient(at 80% 100%,rgba(107,102,255,0.05) 0px,transparent 50%),radial-gradient(at 0% 0%,rgba(255,133,167,.15) 0px,transparent 50%);
}
@keyframes scale-down {
  from {
    scale: 3.7037; /* final size / initial size */
    transform-origin: top left;
    translate: 0 -330.18px;
  }
}
@keyframes opacity-down {
  to {
    opacity: 0;
  }
}
</style>
