---
import { t } from 'i18next'
import { Trans } from 'astro-i18next/components'

const response = await fetch('https://api.github.com/users/jhormanrus')
const myGithub = await response.json()
---

<header id="hero" class="max-w-screen-md flex items-center gap-56 z-10 px-2 pt-4 pb-2 sm:px-6 sm:pt-8 sm:pb-4 lg:px-8 lg:pt-10 lg:pb-4" style={{ opacity: 'calc(1 - var(--title-opacity))' }}>
  <div class='space-y-3'>
    <div class="flex items-center gap-4">
      <div class="w-16 h-16 flex-shrink-0"></div>
      <div>
        <h1 class='text-2xl font-semibold'>{t('hiIm')} Jhorman</h1>
        <h2 class='text-lg font-bold text-gray'>{t('webDeveloper')}</h2>
      </div>
    </div>
    <p>
      {t('welcome')}<br />
      <Trans i18nKey="myDescription">
        <a href='/#projects' class='hover:underline decoration-2 hover:decoration-navy font-bold' />
        <a href='/#article' class='hover:underline decoration-2 hover:decoration-navy font-bold' />
      </Trans>
    </p>
  </div>
  <div class='shrink-0 space-y-2 items-center'>
    <a class="hyperlink" href="https://linkedin.com/in/jhormanrus/" target="_blank" rel="noreferrer">
      <img class="w-5 h-5 relative" src="/svg/linkedin.svg" alt="linkedin logo" />
      Linkedin
    </a>
    <a class="hyperlink" href={myGithub?.html_url} target="_blank" rel="noreferrer">
      <img class="w-5 h-5 relative dark:invert" src="/svg/github.svg" alt="github logo" />
      Github
    </a>
    <a class="hyperlink" href="https://drive.google.com/file/d/1fL352Q8oWF-OxuTZz5UUizkCQdQIMqU5/view" target="_blank" rel="noreferrer">
      <img class="w-5 h-5 relative dark:invert" src="/svg/github.svg" alt="github logo" />
      CV
    </a>
  </div>
</header>

<style>
.hyperlink {
  @apply text-gray flex items-center gap-2 hover:underline;
}
</style>
