---
import { t } from 'i18next'

const response = await fetch('https://api.github.com/users/jhormanrus')
const myGithub = await response.json()
---

<header id="hero" class="flex ai:center gap:224 max-w:sm opacity:$(header-opacity) pb:12 pb:20@xs pb:20@md pt:32 pt:40@md px:20 px:24@xs px:32@md z:1">
  <div class='flex flex:col gap:12'>
    <div class="flex ai:center gap:20">
      <div class="flex-shrink:0 h:64 w:64"></div>
      <div class="flex flex:col gap:4">
        <h1 class='f:24 f:semibold'>{t('hiIm')} Jhorman</h1>
        <h2 class='f:18 f:bold f:gray'>{t('webDeveloper')}</h2>
      </div>
    </div>
    <p id="header-description" class="t:16">
      {t('welcome')}
      <br />
      {t('myDescription')}
    </p>
  </div>
  <div class="flex@xs hidden flex-shrink:0 flex:col gap:12">
    <a class="hyperlink" href="https://linkedin.com/in/jhormanrus/" target="_blank" rel="noreferrer">
      <img src="/svg/linkedin.svg" alt="linkedin logo" />
      Linkedin
    </a>
    <a class="hyperlink" href={myGithub?.html_url} target="_blank" rel="noreferrer">
      <img class="invert(1)@dark" src="/svg/github.svg" alt="github logo" />
      Github
    </a>
    <a class="hyperlink" href="https://drive.google.com/file/d/1fL352Q8oWF-OxuTZz5UUizkCQdQIMqU5/view" target="_blank" rel="noreferrer">
      <img class="invert(1)@dark" src="/svg/github.svg" alt="github logo" />
      CV
    </a>
  </div>
</header>

<style>
.hyperlink {
  color: gray;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}
.hyperlink img {
  position: relative;
  width: 1.25rem;
  height: 1.25rem;
}
.hyperlink:hover {
  text-decoration: underline;
}
</style>
