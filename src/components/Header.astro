---
import { t } from 'i18next'

const response = await fetch('https://api.github.com/users/jhormanrus')
const myGithub = await response.json()
---

<header id="hero" class="flex jc:center bg:white/.2 bg:zinc/.3@dark w:full">
  <div class="flex ai:center gap:24 max-w:screen-sm pt:32 pt:80@md px:20 px:24@xs px:32@md z:1">
    <div class="flex-shrink:0 h:156 w:156"></div>
    <div class='flex flex:col gap:12'>
      <div class="flex flex:col gap:4">
        <h1 class='f:24 f:semibold'>{t('hiIm')} Jhorman</h1>
        <h2 class='f:18 f:bold f:gray'>{t('webDeveloper')}</h2>
      </div>
      <p id="header-description" class="f:16 lh:1.4">
        {t('welcome')}
        <br />
        {t('myDescription')}
      </p>
    </div>
    <div class="flex@xs hidden flex-shrink:0 flex:col gap:12">
      <a class="hyperlink" href="https://linkedin.com/in/jhormanrus/" target="_blank" rel="noreferrer">
        <img src="/svg/linkedin.svg" alt="linkedin logo" />
        Linkedin
      </a>
      <a class="hyperlink" href={myGithub?.html_url} target="_blank" rel="noreferrer">
        <img class="invert(1)@dark" src="/svg/github.svg" alt="github logo" />
        Github
      </a>
      <a class="hyperlink" href="https://drive.google.com/file/d/1fL352Q8oWF-OxuTZz5UUizkCQdQIMqU5/view" target="_blank" rel="noreferrer">
        <img class="invert(1)@dark" src="/svg/github.svg" alt="github logo" />
        CV
      </a>
    </div>
  </div>
</header>

<style>
.hyperlink {
  color: gray;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}
.hyperlink img {
  position: relative;
  width: 1.25rem;
  height: 1.25rem;
}
.hyperlink:hover {
  text-decoration: underline;
}
header {
  animation: background-up linear both;
  animation-timeline: scroll();
  animation-range: 0 var(--nav-offset-top);
}
header > div {
  animation: opacity-down linear both;
  animation-timeline: scroll();
  animation-range: 20px calc(var(--nav-offset-top) - 60px);
}
</style>
