---
import { t } from 'i18next'
import projectsList from '../../public/json/projects.json'
import CardProject from './CardProject.astro';
---

<section id="projects" class='flex flex-col pt-20'>
  <div class="space-y-2">
    <h2 class='text-2xl font-bold'>{t('projects')}</h2>
    <p>
      <!-- <Trans i18nKey="projectsDescription">
        <a href="https://github.com/jhormanrus" class="font-bold hover:underline decoration-teal-600 decoration-2" />
      </Trans> -->
    </p>
  </div>
  <div class='grid grid-cols-[repeat(auto-fill,minmax(260px,1fr))] gap-4 mt-6'>
    {projectsList.filter(project => project.visible).map(project => (
      <CardProject project={project} />
    ))}
  </div>
</section>
