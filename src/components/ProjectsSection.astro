---
import { t } from 'i18next'
import { Trans } from 'astro-i18next/components'
import projectsList from '../../public/json/projects.json'
import CardProject from './CardProject.astro';
---

<section id="projects" class='flex flex-col'>
  <div class="space-y-2">
    <h2 class='text-2xl font-bold'>{t('projects')}</h2>
    <p>
      <Trans i18nKey="projectsDescription">
        <a href="https://github.com/jhormanrus" class="font-bold hover:underline decoration-navy decoration-2" />
      </Trans>
    </p>
  </div>
  <div class='flex flex-col gap-4 mt-6'>
    {projectsList.filter(project => project.visible).map(project => (
      <CardProject project={project} />
    ))}
  </div>
</section>
